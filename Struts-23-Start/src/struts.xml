<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- package 包名，区分不同模块，名称唯一，可以继承父类package，包含多个控制器action -->
	<package name="default" extends="struts-default">
		<!-- action 控制器配置 name与url地址，与页面form的action相对应 class 具体的控制器 resault-name 
			跳转结果别名，后面具体的地址 -->
		<action name="login" class="com.yqx.train.struts2.login.loginAction">
			<result name="success">/login/success.jsp</result>
			<result name="error">/login/error.jsp</result>

		</action>
		<action name="login2" class="com.yqx.train.struts2.login.loginAction2">
			<result name="success">/login/success.jsp</result>
			<result name="error">/login/error.jsp</result>
		</action>

		<action name="login3" class="com.yqx.train.struts2.login.loginAction3">
			<result name="success">/login/success.jsp</result>
			<result name="error">/login/error.jsp</result>
		</action>
	</package>
</struts>